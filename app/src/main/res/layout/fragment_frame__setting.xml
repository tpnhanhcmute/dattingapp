<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="0dp">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_baseline_keyboard_backspace_24"
        android:onClick="onBackPressed"
        android:text=""
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-39dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="168dp"
        android:layout_toEndOf="@+id/btnBack"
        android:text="Settings"
        android:textColor="#120808"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="659dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/buttonsetting"
            android:drawableLeft="@drawable/baseline_account_circle_24"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:drawablePadding="8dp"
            android:text="Personal Information"
            android:textAlignment="textStart"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/buttonDiscorverSetting"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/buttonsetting"
            android:drawableLeft="@drawable/discovery"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:drawablePadding="8dp"
            android:text="Discovery Settings"
            android:textAlignment="textStart"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/buttonsetting"
            android:drawableLeft="@drawable/sercurity"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:drawablePadding="8dp"
            android:text="Privacy &amp; permisstion"
            android:textAlignment="textStart"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/buttonsetting"
            android:drawableLeft="@drawable/noti"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:drawablePadding="8dp"
            android:text="Notifycation"
            android:textAlignment="textStart"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/buttonsetting"
            android:drawableLeft="@drawable/shield"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:drawablePadding="8dp"
            android:text="Security"
            android:textAlignment="textStart"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/buttonsetting"
            android:drawableLeft="@drawable/storage"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:drawablePadding="8dp"
            android:text="Data &amp; storage"
            android:textAlignment="textStart"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/buttonsetting"
            android:drawableLeft="@drawable/feedback"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:drawablePadding="8dp"
            android:text="Feedback"
            android:textAlignment="textStart"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/buttonsetting"
            android:drawableLeft="@drawable/language"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:drawablePadding="8dp"
            android:text="language"
            android:textAlignment="textStart"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/buttonsetting"
            android:drawableLeft="@drawable/info"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:drawablePadding="8dp"
            android:text="about"
            android:textAlignment="textStart"
            android:elevation="0dp"
            android:stateListAnimator="@null"/>


    </LinearLayout>


</RelativeLayout>