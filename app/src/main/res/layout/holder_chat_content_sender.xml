<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:padding="5dp"
    >
    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_alignParentRight="true">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_sender"
            android:orientation="horizontal">
            <TextView
                android:gravity="left|center"
                android:maxWidth = "250dp"
                android:id="@+id/textViewContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="TextVssdsdsdsdsdsddf
            ấ
            dfdf
            gfdgdg
            gđgđ
            gffdfđfdfdfxvcvcvcvvxvcbccgsdsddsdsdsdsiew" />

            <TextView
                android:gravity="left|bottom"
                android:layout_marginLeft="10dp"
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="12:09" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imageViewSending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/ic_baseline_swap_horizontal_circle_24" />

    </LinearLayout>
</RelativeLayout>